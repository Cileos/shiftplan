<heading>
<h4>{{chapter.title}}</h4>
</headingp>

{{#if chapter.motivation}}
<p>{{chapter.motivation}}</p>
{{/if}}

{{outlet step}}

<div class="buttons">
  {{#if hasPrevious}}
    <button class="button previous" {{action 'gotoStep' previousStep}}>{{t 'helpers.actions.previous'}}</button>
  {{/if}}
  {{#if hasNext}}
    <button class="button next" {{action 'gotoStep' nextStep}}>{{t 'helpers.actions.next'}}</button>
  {{/if}}
<p class="fineprint">{{t 'copy.setup.not_fixed' }}</p>
