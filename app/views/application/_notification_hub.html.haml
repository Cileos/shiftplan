- count_new = current_user.unseen_notifications_count
- hub_class = count_new > 0 ? 'has_unseen' : ''
- hub_class += current_user.notifications.unread.count > 0 ? ' has_unread' : ''

%li#notification-hub.dropdown{class: hub_class }
  = link_to notifications_path, {id: 'notifications-count', data: { toggle: 'dropdown'}} do
    .icon-bell_empty
    - if count_new > 0
      %span.count>= count_new
  .dropdown-menu
    %ul.notifications
