- count = current_user.new_notifications_count
%li#notification-hub.dropdown{class: count > 0 ? 'has_new' : '' }
  = link_to content_tag(:div, '', :class => 'icon-bell_empty') + (count > 0 ? content_tag(:span, count.to_s, :class => 'count') : ''), notifications_path,
    { id: 'notifications-count', data: { toggle: 'dropdown'}}
  %ul.notifications.no-hover
