%ul
  - if user_signed_in?
    %li.dropdown
      %a{href: '#', 'data-toggle' => 'dropdown'}
        = render 'avatar_and_name'
      %ul
        - if current_user.is_multiple?
          %li= link_to :settings, profile_employees_path, data: { icon: i(:settings) }
        - else
          %li= link_to :settings, edit_profile_employee_path(current_user.employees.first), data: { icon: i(:settings) }
        %li= link_to :signout, destroy_user_session_path, :method => :delete, data: { icon: i(:signout) }
  - else
    %li= link_to :signup, new_user_registration_path, data: { icon: i(:signup) }
    %li= link_to :signin, new_user_session_path,      data: { icon: i(:signin) }
