%span#avatar_and_name
  - if current_employee.present?
    %span.name= current_employee.name
    %span.avatar= avatar(current_employee, :thumb)
  - else
    %span.name= current_user.email
    - employee_with_avatar = current_user.find_employee_with_avatar
    - if employee_with_avatar.present?
      %span.avatar= avatar(employee_with_avatar, :thumb)
    - else
      %span.avatar= default_avatar(:thumb)
