%table#teams
  %thead
    %tr.employee
      - if can? :manage, TeamMerge
        %th.checkbox
          &nbsp;
      %th= Team.human_attribute_name(:name)
      %th= Team.human_attribute_name(:shortcut)
      %th= t('.team_color')
      - if can? :edit, Team
        %th= t('action')

  %tbody
    - teams.each do |team|
      %tr{ id: "team_#{team.id}" }
        - if can? :manage, TeamMerge
          %td.checkbox
            %input(type="checkbox"){ id: "team_#{team.id}", 'data-team-id' => "#{team.id}" }
        %td= team.name
        %td= team.shortcut
        %td= render 'teams/pibble', team: team
        - if can? :edit, Team
          %td= link_to :edit, [:edit] + nested_resources_for(team), remote: true, class: 'button button-small'
