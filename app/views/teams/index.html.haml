- title :teams

.row
  .span4
    = tt '.instructions'
  .span6
    %table#teams.table.table-striped.table-condensed
      %thead
        %tr.employee
          %th= Team.human_attribute_name(:name)
          %th= Team.human_attribute_name(:shortcut)
          %th

      %tbody
        - collection.each do |team|
          %tr
            %td= team.name
            %td= team.shortcut
            %td
              - if can? :edit, team
                = link_to :edit, edit_team_path(team), class: 'btn btn-warning btn-mini'
