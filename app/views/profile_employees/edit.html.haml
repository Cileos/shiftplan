- title :settings

= render layout: 'profile/with_menu' do
  %h3= ta :profile

  = simple_form_for @employee, url: profile_employee_path(@employee) do |f|
    = f.error_notification

    .inputs
      .avatar_and_name
        = f.label :avatar
        = avatar(@employee.user, @employee, :thumb, :author)
        = f.input :avatar, as: :file, :label => false
        = f.input :avatar_cache, as: :hidden

      = f.input :first_name, autofocus: true
      = f.input :last_name

    .actions
      = f.update_button

  - if current_user.multiple?
    = link_to :back, profile_employees_path
