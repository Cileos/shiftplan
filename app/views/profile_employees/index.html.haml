- title :profile

%p= t('.instructions')

%table#employees.table.table-striped.table-bordered.table-condensed
  %thead
    %tr.employee
      %th= Employee.human_attribute_name(:full_name)
      %th= Employee.human_attribute_name(:organization)

  %tbody
    - @employees.each do |employee|
      %tr{ id: "employee_#{employee.id}" }
        %th
          = avatar(employee.user, employee, :tiny)
          = link_to employee.name, edit_profile_employee_path(employee)
        %td.organization= employee.organization.name
