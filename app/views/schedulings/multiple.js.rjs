page.decorate filter do |f|

  f.append_modal body: ''

  f.records.each do |scheduling|
    tabs = tabs_for scheduling, :edit, :comments, well: true do |tab|
      if can? :edit, scheduling
        tab == :edit
      else
        tab == :comments
      end
    end
    f.append_to_modal tabs
  end

  # TODO append the new form
end
