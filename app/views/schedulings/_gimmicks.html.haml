.gimmicks{class: scheduling.css_class}
  - icon_klass = (scheduling.comments_count > 0) ? 'icon-comment' : 'icon-no_comment'
  - if can? :create, Comment, commentable: scheduling
    = link_to scheduling.comments_count.to_s, [current_account, scheduling.organization, scheduling.plan, scheduling, :comments], title: ta(:comments), remote: true, class: "comments #{icon_klass}"
  - if scheduling.comments_count > 0
    = render 'comments/truncated_list', comments: scheduling.comments
