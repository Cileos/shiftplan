= simple_form_for scheduling, url: account_organization_plan_schedulings_path(current_account, current_organization, scheduling.plan), remote: true, html: { class: 'form-horizontal' } do |f|
  - if current_plan_mode.teams_in_week? or current_plan_mode.teams_in_day?
    = f.input :quickie, hint: true, input_html: { value: '' }
  - else
    = f.input :quickie, hint: true

  - if current_plan_mode.teams_in_day?
    = f.hidden_field :date
  - else
    = f.input :date, :collection => cwdays_for_select(scheduling.date), :include_blank => false

  = f.association :employee, as: :select, include_blank: false, collection: scheduling.plan.organization.employees

  - if current_plan_mode.teams_in_week? or current_plan_mode.teams_in_day?
    = f.association :team, as: :select, include_blank: false, collection: scheduling.plan.organization.teams

  .actions
    %button.button-success{type: 'submit', 'data-icon' => '&#xf00c;'.html_safe}
      = ta :create
