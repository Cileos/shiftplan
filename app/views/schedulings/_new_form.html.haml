- url = account_organization_plan_schedulings_path(current_account, current_organization, scheduling.plan)
= simple_form_for scheduling, url: url, remote: true, html: { class: 'form-horizontal' } do |f|

  .inputs
    - if current_plan_mode.teams_in_week? or current_plan_mode.teams_in_day?
      = f.input :quickie, hint: true, input_html: { value: '' }
    - else
      = f.input :quickie, hint: true

    = render 'schedulings/fields', f: f

  .actions
    = f.create_button data: { icon: i(:check) }
