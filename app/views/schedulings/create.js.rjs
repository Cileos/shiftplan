page.decorate resource.concurrent do |filter|
  if resource.errors.empty?
    filter.update_cell_for(resource)
    if resource.next_day
      filter.update_cell_for(resource.next_day)
    end
    filter.update_hours_for(resource.employee)
    filter.hide_modal :scheduling_form, resource
    filter.update_legend
    filter.update_quickie_completions
  else
    filter.insert_errors_for(resource)
  end
end
