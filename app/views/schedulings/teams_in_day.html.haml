- title filter.caption, false

%table#calendar.calendar.teams-in-day.schedulings{class: filter.range, data: filter.table_metadata}
  %thead
    %tr
      %th
        %span.header= ta :teams
      %th
  %tbody{ class: clickable_class }
    - filter.teams.each do |team|
      %tr
        %th.team_name= team.name
        %td.bars{data: filter.cell_metadata(team)}
          = filter.cell_content(team)

= render 'plans/details', plan: filter.plan
