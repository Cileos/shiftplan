%header.calendar-caption
  %h2= filter.caption

%nav{:role => 'calendar-navigation'}
  -#.button-group
  -#  = link_to t('.day'), filter.path_to_day, class: 'button'
  .button-group
    = link_to t('.previous'), filter.previous_path, class: 'button'
    = link_to t('.today'), filter.today_path,       class: 'button'
    = link_to t('.next'), filter.next_path,         class: 'button'
  - if can? :create, Scheduling
    .button-group
      - if filter.mode?('week')
        = link_to ti(:copy_week), new_organization_plan_copy_week_path(current_organization, filter.plan, copy_week: { target_week: filter.week, target_year: filter.year }), remote: true, class: 'button'
      = link_to ti(:new_scheduling), new_organization_plan_scheduling_path(current_organization, filter.plan, scheduling: { date: filter.monday}), class: 'new_scheduling button', remote: true
  .button-group.options
    = link_to :show_legend, '#legend', id: 'display_legend', class: "js_button button", title: ta(:show_legend_long)
    = link_to :show_help, '#help', id: 'display_help', class: "js_button button", title: ta(:show_help_long)
