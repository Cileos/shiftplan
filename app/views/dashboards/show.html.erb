<h1><%= t(:'headings.overview') %></h1>

<%= @current_activities.map { |activity| p activity; presenter_for(activity, "activity/#{activity.object_type}").to_s }.join_safe %>
<%= @aggregated_activities.map { |activity| p activity; presenter_for(activity, "activity/#{activity.object_type}").to_s }.join_safe %>

<div id="sidebar">
  <h3><%= t(:'headings.statistics') %></h3>

  <ul>
    <li><%= link_to t(:employees,      :count => @number_of_employees), employees_path %></li>
    <li><%= link_to t(:qualifications, :count => @number_of_qualifications), qualifications_path %></li>
    <li><%= link_to t(:workplaces,     :count => @number_of_workplaces), workplaces_path %></li>
  </ul>
</div>