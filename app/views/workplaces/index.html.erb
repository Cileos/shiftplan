<%= link_to "Add a new workplace", new_workplace_path, :class => 'dialog', :title => 'New workplace' %>

<ul>
  <% for workplace in @workplaces -%>
    <% content_tag_for(:li, workplace) do -%>
    	<%= link_to(workplace.name, workplace_path(workplace)) %> (<%= workplace.color %>)
				(<%= link_to(t(:edit), edit_workplace_path(workplace), :class => 'dialog', :title => "Workplace #{workplace.name}") %>,
				<%= link_to(t(:destroy), workplace_path(workplace), :method => :delete) %>)
    <% end -%>
  <% end -%>
</ul>