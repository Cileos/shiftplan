<%
day_names = []
t(:'date.day_names').each_with_index { |d, i| day_names << [d, i] }
%>
<% form_for([employee, availability]) do |f| %>
  <div>
    <%= f.label :day %>
    <%= f.date_select :day, :start_year => Time.current.year %>
  </div>
  <div>
    <%= f.label :start %>
    <%= f.time_select :start, :minute_step => 5 %>
  </div>
  <div>
    <%= f.label :end %>
    <%= f.time_select :end, :minute_step => 5 %>
  </div>
  <div>
    <%= f.submit 'Save' %>
  </div>
<% end %>