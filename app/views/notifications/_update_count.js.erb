current_title = $('title').text();
count_substr_match = $.trim(current_title).match(/^\(\d+\)/);
if (count_substr_match) {
  $('title').text(current_title.replace(count_substr_match[0], ''));
}
<% if (count = current_user.new_notifications_count) > 0 %>
  $("li#notification-hub").addClass('has_new has_unread');
  $('a#notifications-count span.count').remove();
  $('a#notifications-count').append('<span class="count"><%= count %></span>')
  current_title = $('title').text();
  $('title').text('(<%= count %>)' + current_title)
<% else %>
  $("li#notification-hub").removeClass('has_new');
  $('a#notifications-count span.count').remove();
<% end %>
