<% count = current_user.unread_notifications.count %>
<% if count > 0 %>
  $("li#notification-hub").addClass('has_new');
<% else %>
  $("li#notification-hub").removeClass('has_new');
  $("ul.notifications").append('<%= j render("notifications/all_done") %>');
<% end %>
<%= render 'notifications/update_count', count: count %>
$('ul.notifications').replaceWith('<%= j render("notifications/notifications_list", notifications: notifications) %>');
