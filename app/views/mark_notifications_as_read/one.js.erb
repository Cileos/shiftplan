$('<%= "li##{dom_id(@notification)}" %>').remove();
<% notifications = current_user.unread_notifications %>
$("a#notifications-count").replaceWith('<%= j render("notifications/count", count: notifications.count) %>');
<% if notifications.empty? %>
  $("li#notification-hub").removeClass('has_new');
  $("ul.notifications").append('<%= j render("notifications/all_done") %>');
<% end %>
