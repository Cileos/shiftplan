<h3><%= t(:new_default_status) %></h3>

<% form_for(Status.new) do |f| %>
  <fieldset>
    <div>
      <%= f.label :employee_id %>
      <%= f.collection_select :employee_id, @employees, :id, :full_name, :include_blank => true %>
    </div>
    <div>
      <%= f.label :day_of_week %>
      <%= f.select :day_of_week, options_for_select(day_names, f.object.day_of_week) %>
    </div>
    <div>
      <%= f.label :start_time %>
      <%= f.time_select :start_time, :minute_step => 5 %>
    </div>
    <div>
      <%= f.label :end_time %>
      <%= f.time_select :end_time, :minute_step => 5 %>
    </div>
    <ul>
      <% Status::VALID_STATUSES.each do |status| -%>
        <li>
          <%= f.radio_button :status, status %>
          <%= f.label "status_#{status.underscore}", t(:"statuses.#{status.underscore}", :scope => [:activerecord, :attributes, :status], :default => status), :class => 'inline' %>
        </li>
      <% end -%>
    </ul>
  </fieldset>
  <div>
    <%= f.submit 'Save' %>
  </div>
<% end %>