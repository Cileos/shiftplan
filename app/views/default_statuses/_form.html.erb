<%
day_names = []
t(:'date.day_names').each_with_index { |d, i| day_names << [d, i] }
%>
<% form_for([employee, default_status], :url => default_status.new_record? ? employee_default_statuses_path(employee) : employee_default_status_path(employee, default_status)) do |f| %>
  <div>
    <%= f.label :day_of_week %>
    <%= f.select :day_of_week, options_for_select(day_names, f.object.day_of_week) %>
  </div>
  <div>
    <%= f.label :start %>
    <%= f.time_select :start, :minute_step => 5 %>
  </div>
  <div>
    <%= f.label :end %>
    <%= f.time_select :end, :minute_step => 5 %>
  </div>
  <div>
    <% Status::VALID_STATUSES.each do |status| -%>
      <%= f.radio_button :status, status %>
      <%= f.label "status_#{status.underscore}", t(:"statuses.#{status.underscore}", :scope => [:activerecord, :attributes, :status], :default => status) %>
    <% end -%>
  </div>
  <div>
    <%= f.submit 'Save' %>
  </div>
<% end %>