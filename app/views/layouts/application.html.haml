!!!5
%html
  = render 'layouts/head'
  %body
    = render 'layouts/top'

    .wrap
      %section{role: 'content', :class => ((content_for? :sidebar) ? "two-columns" : nil) }
        = render 'flash'

        .primary
          %header.masterhead
            - if show_title?
              %h2#title= yield(:title)
            - if content_for? :masterhead_toolbar
              %nav{role: 'toolbar'}= yield(:masterhead_toolbar)

          = yield

        - if content_for? :sidebar
          #sidebar.secondary
            = yield(:sidebar)

      = render 'layouts/footer'
