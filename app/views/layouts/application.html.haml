    %meta{'http-equiv' => "Content-Type", 'content' => "text/html;charset=utf-8"}
    %title
      - if content_for?(:title)
        = yield(:title)
        \-
      Shiftplan
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'lib'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    = include_gon
  %body

    .container-fluid
      .navbar
        .navbar-inner
          .container-fluid
            = link_to 'Shiftplan', root_path, class: 'brand'
            = render 'navigation'
            = render 'session'
      - if show_title?
        .page-header
          %h1#title= yield(:title)
      = render 'flash'

      = yield
