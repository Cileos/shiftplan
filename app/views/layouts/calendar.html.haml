!!!5
- controller.gon.quickie_completions = filter.quickies_for_completion
%html{lang: I18n.locale}
  = render 'layouts/head'
  %body
    = render 'layouts/top'

    %section{:role => 'content', :class => content_class(2) + ' inverted has-calendar'}

      #sidebar.secondary
        = collapsible(t('schedulings.information'), id: 'calendar-information', class: 'calendar-information') do
          .calendar-active-week= filter.formatted_range
          .calendar-description!= filter.plan.description
          .calendar-period-dates
            %div= filter.plan_period_start_date
            %div= filter.plan_period_end_date

        - current_role = current_employee.owner? ? 'owner' : current_membership.role
        = collapsible( Milestone.model_name.human(count: 9001), id: 'milestones-toggle') do
          #milestones.milestones-list{data: { role: current_role }}

        = yield(:sidebar)

        = collapsible(t('help.calendar.keyboard_heading'), id: 'keyboard-shortcuts', class: 'keyboard-shortcuts') do
          = help_tag 'calendar.keyboard'


      .primary
        = render 'where_and_who_am_i'
        = render 'flash'

        %header.masterhead
          %h2#title.calendar-caption= filter.plan.name
          %nav{role: 'toolbar'}
            = render 'calendar_navigation', filter: filter

        = yield

      -# #contextual_help{:class => contextual_help_class(3)}
      -#   = yield(:contextual_help)

    = render 'layouts/footer'
