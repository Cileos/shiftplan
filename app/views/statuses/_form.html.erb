<h3><%= t(:new_status) %></h3>

<% form_for(Status.new(:employee => @employee)) do |f| %>
	<input type="hidden" name="_method" value="" />
  <fieldset>
    <% if @employee -%>
      <%= f.hidden_field :employee_id %>
    <% else -%>
      <div>
        <%= f.label :employee_id %>
        <%= f.collection_select :employee_id, Employee.all, :id, :full_name, :include_blank => true %>
      </div>
    <% end -%>
    <div class="default_only" style="display:none;">
      <%= f.label :day_of_week %>
      <%= f.select :day_of_week, options_for_select(day_names, f.object.day_of_week), {}, :disabled => true %>
    </div>
    <div class="override_only">
      <%= f.label :day %>
      <%= f.date_select :day, :start_year => Time.current.year %>
    </div>
    <div>
      <%= f.label :start_time %>
      <%= f.time_select :start_time, :minute_step => 5 %>
    </div>
    <div>
      <%= f.label :end_time %>
      <%= f.time_select :end_time, :minute_step => 5 %>
    </div>
    <ul>
      <% Status::VALID_STATUSES.each do |status| -%>
        <li>
          <%= f.radio_button :status, status %>
          <%= f.label "status_#{status.underscore}", t(:"statuses.#{status.underscore}", :scope => [:activerecord, :attributes, :status], :default => status), :class => 'inline' %>
        </li>
      <% end -%>
    </ul>
  </fieldset>
  <div>
    <%= f.submit 'Save' %>
  </div>
<% end %>