<% form_for :session, :url => session_path, :method => :post do |f| %>
  <fieldset>
    <legend>Login</legend>
    <ol>
      <li>
        <label for="session_email">E-Mail</label>
        <%= f.text_field :email %>
      </li>
      <li>
        <label for="session_password">Password</label>
        <%= f.password_field :password %>
      </li>
    </ol>
    <%= f.submit 'Login' %>
  </fieldset>  
<% end %>