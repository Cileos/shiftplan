= simple_form_for([current_organization, employee], remote: true) do |f|
  = f.error_notification

  .inputs
    = f.input :first_name, autofocus: true
    = f.input :last_name
    = f.input :weekly_working_time, input_html: { value: 40, step: 1, min: 0 }

  .actions
    %button.btn.btn-primary= ti(:update)
