#duplication-warning
  - unless duplicate_employees.empty?
    %br
    %p= t('employees.new.following_duplicates_found')

    - adoptable_employees = duplicate_employees.reject { |e| e.organizations.include?(current_organization) }
    - if adoptable_employees.empty?
      %p= t('employees.new.duplicates_are_all_members')

    = form_tag([:add_members, current_account, current_organization], { id: 'add-members', class: 'form-horizontal add-employee' }) do |f|
      = render 'adopt_employees_table', employees: duplicate_employees

      .actions
        %button.button-success{ disabled: adoptable_employees.empty? ? true : false}= ti(:adopt_employee)

