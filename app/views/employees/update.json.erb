{
  'flash': {
    'notice': '<%= escape_javascript(flash[:notice]) %>'
  },
  'employee': <%= @employee.to_json %>,
  'html': {
    'replace': {
      '#<%= dom_id(@employee) %>': '<%= escape_javascript(render(:partial => 'employee', :object => @employee)) %>',
      '.employee_picture_200': '<%= escape_javascript(image_tag(@employee.gravatar_url(:size => 200), :class => 'employee_picture_200')) %>'
    }
  }
}