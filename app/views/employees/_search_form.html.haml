%p
  = t('employees.search.hint')

= form_tag([:search, current_account, current_organization, :employees],
  { id: 'search', class: 'form-vertical' }) do |f|

  .inputs
    .input
      = label_tag t('activerecord.attributes.employee.first_name')
      = text_field_tag 'first_name', nil, placeholder: t('employees.search.placeholders.first_name')
    .input
      = label_tag t('activerecord.attributes.employee.last_name')
      = text_field_tag 'last_name', nil, placeholder: t('employees.search.placeholders.last_name')
    .input
      = label_tag t('activerecord.attributes.employee.email')
      = text_field_tag 'email', nil, placeholder: t('employees.search.placeholders.email')
    .input
      = label_tag t('activerecord.attributes.employee.organization')
      = select_tag 'organization', options_from_collection_for_select(current_account.organizations, :id, :name),
      prompt: t('employees.search.placeholders.organization')

%p
  %span#search-results
  %a#clear-search.clear-search{href: '#'}= t('employees.search.clear')
