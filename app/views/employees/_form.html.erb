<h3><%= t(:new_employee )%></h3>

<% form_for Employee.new do |f| %>
	<input type="hidden" name="_method" value="" />
	<fieldset>
	  <div>
	    <%= f.label :first_name %>
	    <%= f.text_field :first_name %>
	  </div>
	  <div>
	    <%= f.label :last_name %>
	    <%= f.text_field :last_name %>
	  </div>
	  <div>
	    <%= f.label :birthday %>
	    <%= f.date_select :birthday, :start_year => Time.current.year, :end_year => 1920, :include_blank => true %>
	  </div>
	  <div>
	    <%= f.label :active %>
	    <%= f.check_box :active, {}, 1 %>
	  </div>
	</fieldset>

  <h4><%= t(:qualifications, :scope => :'activerecord.attributes.employee') %></h4>
	<fieldset>
	  <div>
	    <ul class="qualifications" style="width:350px;">
	      <% Qualification.all.each do |qualification| -%>
	        <li><%= check_box_tag 'employee[qualification_ids][]', qualification.id, f.object.has_qualification?(qualification), :id => "employee_qualification_#{qualification.id}", :class => 'employee_qualifications' %><%= f.label "qualification_#{qualification.id}", qualification.name %></li>
	      <% end -%>
	    </ul>
	  </div>
	</fieldset>
  
  <h4><%= t(:contact_information, :scope => :'activerecord.attributes.employee') %></h4>
	<fieldset>
	  <div>
	    <%= f.label :email %>
	    <%= f.text_field :email %>
	  </div>
	  <div>
	    <%= f.label :phone %>
	    <%= f.text_field :phone %>
	  </div>
	  <div>
	    <%= f.label :street %>
	    <%= f.text_field :street %>
	  </div>
	  <div>
	    <%= f.label :zipcode %>
	    <%= f.text_field :zipcode, :class => 'zipcode' %>
	    <%= f.text_field :city, :class => 'city' %>
	  </div>
	</fieldset>

	<%= f.submit t(:save) %>
<% end %>
