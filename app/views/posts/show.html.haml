- title @post.title

- masthead_toolbar do
  %ul
    - if can? :edit, @post
      %li= link_to(ti(:edit), [:edit, current_organization, @post.blog, @post], class: 'button', 'data-icon' => '&#xf044;'.html_safe, remote: true)
    - if can? :destroy, @post
      -# TODO: Open the confirm dialog in our own modal box.
      %li= button_to(ta(:destroy), [current_organization, @post.blog, @post], method: :delete, data: { confirm: t('posts.show.confirm_to_delete', post: @post.title) }, class: 'button button-warning', id: 'destroy-post', 'data-icon' => '&#xf00d;'.html_safe)
      -# %li= link_to(ti(:back), [current_organization, @post.blog, :posts], class: 'button', id: 'back')

.post
  %div{id: "post_#{@post.id}"}
    = render('posts/post_details', post: @post, truncation: false)
    = render('posts/comments', comments: @post.comments)
