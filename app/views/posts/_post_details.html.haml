- require 'notification/comment_on_post'
- if can?(:edit, post) || can?(:destroy, post)
  .actions
    - if can? :edit, post
      = link_to(ti(:edit), [:edit, current_organization, post.blog, post], class: 'btn btn-inverse btn-mini', remote: true)
    - if can? :destroy, post
      = button_to(ta(:destroy), [current_organization, post.blog, post], method: :delete, class: 'btn btn-danger btn-mini', id: 'destroy-post')
= render('posts/post', post: post, truncation: false)
