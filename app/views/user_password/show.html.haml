- title :settings

= render layout: 'profile/with_menu' do
  %h3= ta :change_password

  %p= t('.instructions')

  = simple_form_for @user, url: change_password_path do |f|

    .inputs
      = f.input :current_password, required: true, autofocus: true
      = f.input :password, required: true
      = f.input :password_confirmation, required: true

    .actions
      = f.update_button
