- title :settings

= render layout: 'profile/with_menu' do
  %h3= ta :change_password

  %p= t('user_password.show.instructions')

  = simple_form_for @user, url: change_password_path do |f|

    .inputs
      = f.uncompleted_password :current_password, required: true, autofocus: true
      = f.uncompleted_password :password, required: true
      = f.uncompleted_password :password_confirmation, required: true

    .actions
      = f.update_button
