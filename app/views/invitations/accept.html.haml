%h2= t('.set_your_password')

- @invitation.accepted_at = Time.now
- @invitation.user.confirmed_at = Time.now

= simple_form_for @invitation, :url => confirm_organization_invitation_path(@invitation.organization, @invitation), :html => { :method => :put } do |f|
  = devise_error_messages!
  = f.input :token, as: :hidden
  = f.input :accepted_at, as: :hidden

  = f.simple_fields_for :user do |user_form|
    = user_form.input :confirmed_at, as: :hidden
    = user_form.input :password
    = user_form.input :password_confirmation

  %button.btn.btn-primary= ti(:set_password)
