- title Organization.model_name.human count: 9001

.primary
  %table#organizations
    %tbody
      - current_user.accounts.default_sorting.each do |account|
        %tr
          %th.heading= account.name
          %td
            .actions
              .button-group
                - if can? :create, Organization.new(account: account)
                  = link_to(ta(:add_organization),
                    new_account_organization_path(account),
                    class: 'button button-add', title: ta(:add_organization),
                    data: { remote: true })
                - if can? :edit, account
                  = link_to(ta(:edit_account), edit_account_path(account),
                    class: 'button button-edit', title: ta(:edit_account))

        - organizations = current_user.organizations_for(account).default_sorting
        - unless organizations.empty?
          - organizations.each do |organization|
            %tr
              %th= link_to organization.name, nested_resources_for(organization)
              %td
                .actions
                  - if can? :edit, organization
                    = link_to :edit, [:edit] + nested_resources_for(organization),
                      class: 'button button-small button-edit', data: { remote: true }
        - else
          %p= t(:'.no_organizations')

#instructions.instructions
  = tt '.planner_instructions'
