- title :add_account

- resource.first_name = current_user.employees.first.first_name
- resource.last_name = current_user.employees.first.last_name
- resource.user_id = current_user.id
- resource.on_new_account = true
.row.two-columns.inverted
  .primary
    = simple_form_for resource, html: { class: 'form-horizontal' } do |f|
      .inputs.add-account
        = f.input :on_new_account, as: :hidden
        = f.input :user_id, as: :hidden
        = f.input :name, autofocus: true, required: true, hint: true
        = f.input :organization_name, required: true
        = f.input :first_name, required: true
        = f.input :last_name, required: true
      .actions
        = f.responsive_submit_button :create
  .secondary.instructions
    = tt '.instructions'
