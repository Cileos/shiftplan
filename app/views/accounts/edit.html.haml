- title :edit_account

.row.two-columns.inverted
  .primary
    = simple_form_for resource, html: { class: 'form-horizontal' } do |f|
      .inputs.edit-account
        = f.input :name, autofocus: true
      .actions
        = f.responsive_submit_button do
          %i.icon-ok-circle.icon-white
          = ta :update

  .secondary.instructions
    = tt '.instructions'
