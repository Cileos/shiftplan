- title :plan_templates

- masterhead_toolbar do
  - if can? :create, PlanTemplate
    = link_to ta(:add), [:new] + nested_resources_for(current_organization) + [:plan_template],
      remote: true,
      class: 'button button-add'

.primary
  #plan-templates
    - unless collection.empty?
      = render 'table', records: collection
    - else
      %p= t(:'.no_plan_templates')

#instructions.instructions
  - if can? :create, PlanTemplate
    = tt '.planner_instructions'
  - else
    = tt '.instructions'
