- title :signup

.row
  .span6
    = simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal' }  do |f|
      - resource.on_signup = true
      = f.input :on_signup, as: :hidden
      = f.input :organization_name, autofocus: true, required: true
      = f.input :first_name, required: true
      = f.input :last_name, required: true
      = f.input :email, input_html: { class: 'span3' }, required: true
      = f.input :password, input_html: { class: 'span2' }, required: true
      = f.input :password_confirmation, input_html: { class: 'span2' }, required: true
      .form-actions
        = f.button :submit, ta(:signup), class: 'btn-primary'
  .span4
    = render :partial => "devise/links"

