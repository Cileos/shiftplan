- title :signup

.row
  .span6
    = simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal' }  do |f|
      = devise_error_messages!
      = f.input :email, input_html: { class: 'span3' }
      = f.input :password, input_html: { class: 'span2' }
      = f.input :password_confirmation, input_html: { class: 'span2' }
      .form-actions
        = f.button :submit, ta(:signup), class: 'btn-primary'
  .span4
    = render :partial => "devise/links"

