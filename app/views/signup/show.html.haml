- title :signup

= simple_form_for @signup, :url => signup_path do |f|
  .inputs
    = f.input :email, required: true, input_html: { class: 'mailcheck',
      data: { :'mailcheck-hint' => t('hint.did_you_mean') } }
    = f.input :password, required: true
    = f.input :password_confirmation, required: true

  .actions
    = f.button :submit, ta(:signup), class: ''

