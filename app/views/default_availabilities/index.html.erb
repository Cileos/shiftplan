<% if @employee && @default_availabilities -%>
  <% @default_availabilities.each do |day_of_week, default_availabilities| -%>
    <h3><%= t(:'date.day_names')[day_of_week] %></h3>
    <ul>
      <%= render :partial => 'default_availability', :collection => default_availabilities %>
    </ul>
  <% end -%>
  <%= render :partial => 'form', :locals => { :employee => @employee, :default_availability => @employee.availabilities.default.build } %>
<% else -%>
  <% @employees.each do |employee| -%>
    <%= link_to employee.full_name, employee_default_availabilities_path(employee) %>
  <% end -%>
<% end -%>