%table#calendar.week.table.table-striped.table-bordered
  %thead
    %tr
      %th= translate_action :employees
      - plan.model.days.each do |day|
        %th= l day, :format => :week_day
      %th= translate_action :hours
  %tbody
    - plan.employees.each do |employee|
      %tr
        %th.employee= employee.name
        - plan.model.days.each do |column|
          - week_day = column.to_date.cwday
          %td{data: {employee_id: employee.id, day: week_day}}= plan.quickie_list(employee, week_day)
        %td.hours{data: {employee_id: employee.id}}= plan.hours_for(employee)

