- title @plan.name

%ul.actions
  - if @plan.employees_available?
    %li= link_to '.new_scheduling', new_plan_scheduling_path(@plan), :class => 'new_scheduling'

= decorate @plan do |p|
  %div#calendar-container
    %table#calendar
      %thead
        %tr
          %th= translate_action '.employees'
          - @plan.each_day do |day|
            %th= day.day
      %tbody
        - p.employees.each do |employee|
          %tr
            %td.employee= employee.name
            - @plan.each_day do |column|
              %td{data: {employee_id: employee.id, day: column.day}}
                - if p.quickies_for(employee, column.day).present?
                  %ul.quickies
                    - p.quickies_for(employee, column.day).each do |quicky|
                      %li= quicky
