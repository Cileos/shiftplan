= simple_form_for(@feedback, url: feedback_path, remote: true) do |f|
  = f.error_notification

  .inputs
    - if current_employee
      - @feedback.employee_id = current_employee.id
      = f.input :employee_id, as: :hidden
    - elsif current_user
      - @feedback.user_id = current_user.id
      = f.input :user_id, as: :hidden
    - else
      = f.input :email
    = f.input :body, as: :text, input_html: { class: 'input-fullwidth', rows: 10 }, autofocus: true

  .actions
    %button.btn.btn-primary= ti(:send)
